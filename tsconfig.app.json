{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "packages/**/*",
    "packages/**/*.ts",
    "packages/**/*.vue"
  ],
  "exclude": ["packages/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["packages/*"],
      "@/utils/*": ["./src/utils/*"]
    }
  }
}
